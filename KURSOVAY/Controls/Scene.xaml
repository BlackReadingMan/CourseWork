<UserControl x:Class="CourseWork.Controls.Scene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseWork.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded" Focusable="True" KeyDown="UC_KeyDown"
             >
    <Grid>
        <Image x:Name="Picture" 
               Panel.ZIndex="0"  ></Image>
        <Label x:Name="RenderTimer" 
               FontSize="20" 
               Panel.ZIndex="1" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               Foreground="White"/>
    </Grid>
</UserControl>
