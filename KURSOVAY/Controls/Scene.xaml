<UserControl x:Class="CourseWork.Controls.Scene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseWork.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded" KeyDown="UC_KeyDown"
             >
    <Grid>
        <Image x:Name="Picture"/>
        <Label x:Name="RenderTimer" 
               FontSize="20" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               Foreground="White"/>
        <Label x:Name="Tips" 
               FontSize="17" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Bottom" 
               Content="↵ - поставить камеру в&#10;начальную позицию&#10;↑ - поднять камеру&#10;↓ - опустить камеру &#10;← - сдвинуть камеру влево &#10;→ - сдвинуть камеру вправо &#10;+ - приблизить камеру &#10;- - отдалить камеру" FontWeight="Bold"/>
    </Grid>
</UserControl>
